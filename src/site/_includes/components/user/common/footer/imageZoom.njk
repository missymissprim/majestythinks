<script>
    const containerL = Array.from(document.querySelectorAll('.floaterL'));
    const containerR = Array.from(document.querySelectorAll('.floaterR'));
    const merged = [...containerL, ...containerR];

    merged.forEach(contain => {
        contain.setAttribute('id', 'zoom');
    });

    const zooms = Array.from(document.querySelectorAll('#zoom'));
    const img = Array.from(document.querySelectorAll('#zoom img'));

    console.log(merged);
    console.log(img);
    console.log(zooms);

    zooms.forEach(zoom => {
        zoom.addEventListener('mousemove', onZoom);
        zoom.addEventListener('mouseover', onZoom);
        zoom.addEventListener('mouseleave', offZoom);
    });

    function onZoom(e){
        var x = e.clientX - e.target.offsetLeft;
        var y = e.clientY - e.target.offsetTop;
        img[zooms.indexOf(this)].style.transformOrigin = `${x}px ${y}px`;
        img[zooms.indexOf(this)].style.transform = "scale(3)";
        console.log({x,y});
    }

    function offZoom(e){
        img[zooms.indexOf(this)].style.transformOrigin = 'center center';
        img[zooms.indexOf(this)].style.transform = "scale(1)";
    }
</script>
